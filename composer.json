{
  "name": "retr0/lyra-framework",
  "description": "Simple PHP framework inspired by Laravel",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Lyra\\": "src/",
      "App\\": "app/"
    },
    "files": [
      "src/Helpers/kernel.php",
      "src/Helpers/http.php",
      "src/Helpers/string.php",
      "src/Helpers/session.php",
      "src/Helpers/database.php",
      "src/Helpers/auth.php"
    ]
  },
  "scripts": {
    "tests": "phpunit --color=always --testdox tests/",
    "php-cs-fixer": "php-cs-fixer fix --diff"
  },
  "autoload-dev": {
    "psr-4": {
      "Lyra\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "h3y-retr0",
      "email": "jgr.espiga@protonmail.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "friendsofphp/php-cs-fixer": "^3.75"
  },
  "require": {
    "vlucas/phpdotenv": "^5.6"
  }
}
